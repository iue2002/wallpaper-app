<Window
    x:Class="App1.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="小K壁纸">
    
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Logo 和标题 -->
        <StackPanel Grid.Row="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Spacing="30">
            
            <!-- Logo 图片 -->
            <Image Source="Assets/SplashScreen.scale-200.png"
                   Width="200"
                   Height="200"
                   Stretch="Uniform"/>
            
            <!-- 应用名称 -->
            <TextBlock Text="小K壁纸"
                       FontSize="32"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            
            <!-- 版本信息 -->
            <TextBlock Text="v1.0.0"
                       FontSize="14"
                       Foreground="#888888"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- 加载进度条 -->
        <StackPanel Grid.Row="1" 
                    Margin="0,0,0,40"
                    HorizontalAlignment="Center"
                    Spacing="10">
            <ProgressRing IsActive="True"
                         Width="30"
                         Height="30"
                         Foreground="#FF6A00"/>
            <TextBlock Text="正在加载..."
                       FontSize="12"
                       Foreground="#AAAAAA"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
